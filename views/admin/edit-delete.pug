extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/shop.css")

block content
    if products.length > 0 
        .cards            
            each prod in products
                .card
                    img.card-img-top.shopimg(src= `${prod.image}`, alt="Book Image")
                    .card-body
                        h5.card-title #{prod.title}
                        p.card-text #{prod.author}
                        p.card-text #{prod.price}
                        a(href=`/admin/product/edit/${prod.id}`)
                            button.btn.btn-success(type="submit") Edit
                        a(href=`/admin/product/delete/${prod.id}`)
                            button.btn.btn-success(type="submit") Delete
