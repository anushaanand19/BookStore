extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/admin.css")

block content
    .main-content 
        form(action="/admin/product", method="post")
            input(type="hidden", name="id", value = `${product.id}`)
            .forms
                .form-group.row
                    .col-sm-4.col-form-label.label Title
                    .col-md-8
                        input.form-control(type="text", name="title" value = `${product.title}`) 
                .form-group.row
                    .col-sm-4.col-form-label.label Author
                    .col-md-8
                        input.form-control(type="text", name="author" value = `${product.author}`) 
                .form-group.row
                    .col-sm-4.col-form-label.label Price 
                    .col-md-8
                        input.form-control(type="text", name="price" value = `${product.price}`) 
                .form-group.row
                    .col-sm-4.col-form-label.label Description 
                    .col-md-8
                        textarea.form-control(name="description", cols="30", rows="4") #{product.description}
                            
            button.btn.btn-success(type="submit" ) Submit
